<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.ganesh.friendsstream.MainActivity" >

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#F2F2F2"
        android:gravity="center_vertical"
        android:padding="3dp" >

        <ImageView
            android:id="@+id/frnd_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/frnd_icon" />

        <TextView
            android:id="@+id/frnd_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="friend name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/frnd_img_layout"
        android:layout_width="fill_parent"
        android:layout_height="116dp"
        android:layout_below="@+id/title_layout"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/frnd_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/compassites" />
    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@+id/frnd_img_layout" >
    </ListView>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#f2f2f2"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/call_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/call" />

        <ImageView
            android:id="@+id/msg_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/msg" />

        <ImageView
            android:id="@+id/contact_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/contact" />
    </LinearLayout>

</RelativeLayout>